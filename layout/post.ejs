<article class="post-container post-container--single"  itemscope itemtype="http://schema.org/BlogPosting">

  <header class="post-header">
    <div class="post-meta" style="font-size:.8em">
      	<%- partial('_partial/date',{post: page}) %> &#8226; <span class="post-meta__tags tags"><%- partial('_partial/tags',{post: page}) %></span> &#8226; View <span id="busuanzi_value_page_pv"></span> times.
    </div>
    <h1 class="post-title"><%= page.title%></h1>
  </header>

  <div class="BlogAnchor">
    <p>
        <b id="BlogAnchorToggle"  style="cursor:pointer;">目录</b>
    </p>
	
    <div class="AnchorContent">
	<%- toc(page.content) %>
	</div>
  </div>

<br>

  <section class="post">
    <%- page.content%>
  </section>

</article>

<%- partial('_partial/contribute', {}) %>

<%- partial('_partial/read-more', {}) %>

