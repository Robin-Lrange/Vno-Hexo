  <nav class="pagination" role="navigation">
    <% if (page.prev){
              if (page.prev == 1) {
                 page.prev_link = "/#blog";
              }
    %>
      <a class="older-posts pagination__older btn btn-small btn-tertiary" href="<%- url_for(page.prev_link) %>#blog">最近</a>
    <% } %>
    <span class="pagination__page-number" >  <%= page.current %> / <%= page.total %> </span>
    <% if (page.next){ %>
      <a class="older-posts pagination__older btn btn-small btn-tertiary" href="<%- url_for(page.next_link) %>#blog">更早</a>
    <% } %>
  </nav>
