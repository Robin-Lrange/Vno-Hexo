<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <% 
        var title = page.title;
        title = title ? (title + ' | ' + config.title) : (config.subtitle ? config.title + " | " + config.subtitle : config.title);
    %>
    <title><%= title %></title>
    <%
        var description = page.excerpt ? page.excerpt : config.description;
        description = description.substring(0, 200).replace(/^\s+|\s+$/g, '');
    %>
    <meta name="description" content="<%= description %>">
    <meta name="keywords" content="<%= page.keywords %>">
    <meta name="å…³é”®å­—" content="<%= page.keywords %>">
    <meta name="author" content="<%= config.author %>">

    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="<%= title %>">
    <meta name="twitter:description" content="<%= description %>">
    <meta name="twitter:keywords" content="<%= page.keywords %>">

    <meta property="og:type" content="article">
    <meta property="og:title" content="<%= title %>">
    <meta property="og:description" content="<%= description %>">
    <meta name="og:keywords" content="<%= page.keywords %>">
    
    <meta name="theme.color" content="#343434">
    <% if (theme.favicon){ %>
    <link rel="icon" href="<%- theme.favicon %>">
    <link rel="shortcut icon" type="image/png" href="<%- theme.favicon %>">
    <% } %>

    <%- css('//netdna.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css') %>
    <%- css('css/main') %>
    <% if (theme.rss) { %>
    <link rel="alternate" type="application/rss+xml" title="<%= config.title %>" href="<%= theme.rss %>">
    <% } %>

    <script async src="https://dn-lbstatics.qbox.me/busuanzi/2.3/busuanzi.pure.mini.js"> </script>
    <link rel="canonical" href="<%= page.permalink || config.url %>"/>

</head>
